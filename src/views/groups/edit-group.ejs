<main class="contenedor contenedor-formularios no-padding">
    <h1><%= namePage %></h1>
    <form action="/groups/edit-group/<%= group.code %>" method="POST" class="default-form">
        <div class="campo">
            <label for="name">Nombre Grupo</label>
            <input type="text" name="name" id="name" placeholder="Nombre Grupo" value="<%= group?.group ?? '' %>">
        </div>

        <div class="campo descripcion">
            <label for="description">Descripción</label>
             <div class="contenedor-editor">
                <input type="hidden" name="description" id="x" value="<%= group?.description ?? '' %>">
                <trix-editor input="x"></trix-editor>
             </div>
        </div>

        <div class="campo">
            <label for="category">Categoría:</label>
            <select name="category" id="category" required>
                <option value="" disabled <%= !group?.category ? 'selected' : '' %>>
                -- Selecciona una categoría --
                </option>
                <% categories.forEach(category => { %>
                <option 
                    value="<%= category.id %>"
                    <%= group?.id_category === category.id ? 'selected' : '' %>>
                    <%= category.category %>
                </option>
                <% }) %>
            </select>
        </div>

        <div class="campo">
            <label for="url">Sitio web</label>
            <input type="url" name="url" id="url" placeholder="Sitio Web" value="<%= group?.url%>">
        </div>
    
        <div class="campo enviar">
            <input type="submit" value="Editar Grupo" class="btn btn-rosa">
        </div>
    </form>
</main>