<main class="contenedor contenedor-formularios no-padding">
    <h1><%= namePage %></h1>
    <form action="/groups/new-group" method="POST" class="default-form">
        <div class="campo">
            <label for="name">Nombre Grupo</label>
            <input type="text" name="name" id="name" placeholder="Nombre Grupo">
        </div>

        <div class="campo descripcion">
            <label for="description">Descripción</label>
             <div class="contenedor-editor">
                <input type="hidden" name="description" id="x">
                <trix-editor input="x"></trix-editor>
             </div>
        </div>

        <div class="campo">
            <label for="category"></label>
            <select name="category" id="category">
                <option value="" selected disabled>-- Selecciona una categoría</option>
                <%categories.forEach(category =>{%>
                    <option value="<%=category.id%>"><%=category.category%></option>
                <%})%>
            </select>
        </div>
    
        <div class="campo">
            <label for="image">Imagen</label>
            <input type="file" name="image" id="image">
        </div>
    
        <div class="campo">
            <label for="url">Sitio web</label>
            <input type="url" name="url" id="url" placeholder="Sitio Web">
        </div>
    
        <div class="campo enviar">
            <input type="submit" value="Crear Grupo" class="btn btn-rosa">
        </div>
    </form>
</main>