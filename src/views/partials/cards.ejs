<div class="card">
    <% if (meeti.group && meeti.group.image) { %>
        <img src="/uploads/groups/<%= meeti.group.image %>">
    <% } else { %>
        <img src="/img/logo.jpg">
    <% } %>
    <% moment.locale('es') %>
        <% const date=`${meeti.event_date} ${meeti.hour}` %>
            <div class="card-texto">
                <p class="fecha">
                    <%= moment(date).format('LLLL') %> Horas
                </p>
                <a href="/meeti/<%=meeti.slug%>">

                    <h3>
                        <%= meeti.title %>
                    </h3>
                </a>
                <div class="info-autor">
                    <% if(meeti.user && meeti.user.image){%>
                        <div class="imagen">
                            <img src="/uploads/profiles/<%= meeti.user.image %>"
                                alt="Imagen de <%= meeti.user ? meeti.user.name : 'autor' %>">
                        </div>
                        <%}else { %>
                            <div class="imagen"></div>
                            <%}%>
                                <div class="informacion">
                                    <p>Organizado por:</p>
                                    <p class="autor">
                                        <%= meeti.user ? meeti.user.name : 'Autor desconocido' %>
                                    </p>
                                </div>
                </div>
            </div>
</div>