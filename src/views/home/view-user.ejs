<main class="asistentes contenedor">
    <h1><%= namePage %></h1>

    <!-- Información del usuario -->
    <div class="informacion-usuario">
        <figure class="imagen">
            <%if(user.image){%>
                <img src="/uploads/profiles/<%= user.image%>" alt="Imagen del usuario: <%= user.name %>">    
            <%}%>
        </figure>
        <div class="texto">
            <%= user.description%>
        </div>
    </div>
    <!-- Información del grupo -->
    <div class="grupos-usuario">
        <%if(groups.length > 0){%>
            <h2>Grupos de  <%= user.name%> </h2>
            <ul class="lista-grupos">
                <% groups.forEach(group =>{%>
                    <li>
                        <figure class="imagen">
                            <% if(group.image){%>
                                <img src="/uploads/groups/<%=group.image%> " alt="Imagen del grupo <%=group.image%>">
                            <%} else{%>
                                <img src="/img/logo.png" alt="Logo meeti">
                            <%}%>
                        </figure>

                        <div class="texto">
                            <a href="/group/<%= group.code %>">
                                <h3> <%= group.group %> </h3>
                            </a>
                        </div>
                    </li>
                <%})%>
            </ul>
        <%}%>
    </div>
</main>